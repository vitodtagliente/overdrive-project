<div class="row">
    <div class="col-12">
        <h3>Articles</h3>
        <p class="lead">
            Manage your articles and edit them with a powerful Editor
        </p>
    </div>
</div>
<div class="row">
    <div class="col">
        <div id="table-container">
        </div>
    </div>
</div>
<script>
    window.addEventListener('load', () =>
    {
        const table = new Table();
        table.render('table-container', {
            columns: {
                visible: {},
                hidden: ['_id', 'id', '__v', 'createdAt', 'updatedAt', 'filename']
            },
            schema: {
                name: {
                    type: String,
                    required: true,
                    trim: true,
                    unique: true
                },
                description: {
                    type: String,
                    required: false,
                    trim: true
                },
                filename: {
                    type: String,
                    required: true,
                    trim: true
                },
                isEnabled: {
                    type: Boolean,
                    default: true
                },
                category: {
                    type: String,
                    trim: true
                },
                tags: {
                    type: String
                }
            },
            url: '/api/articles',
            toolbar: {
                enabled: true,
                buttons: [
                    Toolbar.Button.Prefabs.Add,
                    Toolbar.Button.Prefabs.Edit,
                    new ToolbarButton(
                        'Editor',
                        'keyboard',
                        'btn-info',
                        (table) =>
                        {
                            const id = table.selectedModel._id || table.selectedModel.id;
                            window.open(`/articles/${id}`, '_blank');
                        },
                        ToolbarButton.RenderMode.OnRowSelection
                    ),
                    Toolbar.Button.Prefabs.Remove
                ]
            }
        });

    });
</script>