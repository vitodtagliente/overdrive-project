<script>
    window.addEventListener('load', () =>
    {
        let test_data = Array();
        for (var i = 0; i < 50; ++i) {
            test_data.push({
                id: i,
                name: 'name' + i,
                description: 'description' + i
            });
        };

        const table = new Table();
        table.renderColumn = async (cell, name) =>
        {
            cell.innerHTML = "<b>" + name + "</b>";
        };
        table.render('table-container', {
            columns: {
                visible: {},
                hidden: ['id', '_id']
            },
            schema: {
                name: {
                    Type: String,
                    required: true
                },
                type: {
                    Type: String,
                    required: true
                }
            },
            url: '/api/items',
            fields: {
                power: async (cell, model) =>
                {
                    let style = model.power > 5 ? "bg-success" : "bg-warning";
                    cell.innerHTML = `<p class="${style} m-0 p-0">${model.power}</p>`;
                }
            }
        });

    });
</script>